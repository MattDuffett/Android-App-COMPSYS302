<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="colorPrimaryVariant">@color/accent_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="colorSecondaryVariant">@color/accent_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CategoryCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/card_gray</item>
        <item name="android:elevation">40dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MainActivityHeader">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CategoryText">
        <item name="android:textSize">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ItemTitleText">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategoryImageCard" parent="CardView">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ItemImageCard" parent="CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CategoryImage">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="HomeButton">
        <item name="android:backgroundTint">@color/card_gray</item>
        <item name="android:src">@drawable/ic_home_button</item>
        <item name="layout_goneMarginRight">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
</resources>